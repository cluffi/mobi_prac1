<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/image_description"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallpapers" />


    <TextView
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:id="@+id/text"
        android:text="@string/text_filler"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:importantForAutofill="no"
        android:hint="@string/edit_text_filler"
        android:textColorHint="@color/hint"
        android:inputType="text"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:backgroundTint="@color/action"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:backgroundTint="@color/action"
        android:text="@string/button_filler"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
